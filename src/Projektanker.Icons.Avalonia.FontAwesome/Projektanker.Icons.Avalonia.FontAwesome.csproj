<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <Description>A library to easily display FontAwesome icons in an Avalonia App.</Description>
    </PropertyGroup>
    <ItemGroup>
        <EmbeddedResource Include="Assets\icons.json" />
    </ItemGroup>
    
    <ItemGroup>
        <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Projektanker.Icons.Avalonia\Projektanker.Icons.Avalonia.csproj" />
    </ItemGroup>

    <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
        <DownloadFile Condition="!Exists('Assets/icons.json')" Retries="1" RetryDelayMilliseconds="1000" DestinationFolder="Assets" SourceUrl="https://raw.githubusercontent.com/FortAwesome/Font-Awesome/master/metadata/icons.json" />
    </Target>
</Project>