<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <Authors>Sebastian Rumohr</Authors>
        <Company>Projektanker GmbH</Company>
        <PackageProjectUrl></PackageProjectUrl>
        <RepositoryUrl>https://github.com/Projektanker/Icons.Avalonia</RepositoryUrl>
        <PackageTags>avalonia icons fontawesome</PackageTags>
        <PackageId>Projektanker.Icons.Avalonia.FontAwesome</PackageId>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Version>1.0.0</Version>
    </PropertyGroup>

    <ItemGroup>
        <Compile Remove="font-awesome\**" />
        <EmbeddedResource Remove="font-awesome\**" />
        <None Remove="font-awesome\**" />
    </ItemGroup>

    <ItemGroup>
      <None Remove=".gitignore" />
      <None Remove="clone-font-awesome.sh" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="font-awesome\metadata\icons.json" Link="Assets\icons.json" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
        <PackageReference Include="Projektanker.Avalonia.Icons.Core" Version="1.0.0" />
    </ItemGroup>

</Project>
